" .ideavimrc is a configuration file for IdeaVim plugin. It uses
"   the same commands as the original .vimrc configuration.
" You can find a list of commands here: https://jb.gg/h38q75
" Find more examples here: https://jb.gg/share-ideavimrc

set ideajoun
set idearefactormode=keep
set ideamarks
set ideavim
set ideavimstatusline
set ideavimstatuslineformat=%{IdeavimStatusLineFormat()}
set ideaput

Plug 'easymotion/vim-easymotion'
let mapleader="A-;"
set easymotion
"map <Leader> <Plug>(easymotion-prefix)
map <A-;> <Plug>(easymotion-prefix)


"" -- Suggested options --
" Show a few lines of context around the cursor. Note that this makes the
" text scroll if you mouse-click near the start or end of the window.
set scrolloff=20

" Do incremental searching.
set incsearch
set hlsearch

" Don't use Ex mode, use Q for formatting.
map Q gq

" --- Enable IdeaVim plugins https://jb.gg/ideavim-plugins

Plug 'preservim/nerdtree'
map <c-t> :NERDTree<CR>
""autocmd FileType nerdtree map <buffer> h <Plug>NERDTreeDirCollapse
""autocmd FileType nerdtree map <buffer> l <Plug>NERDTreeDirOpen
" Highlight copied text
Plug 'machakann/vim-highlightedyank'
" Commentary plugin
Plug 'tpope/vim-commentary'

set clipboard+=unnamed
set nu
set rnu
"" -- Map IDE actions to IdeaVim -- https://jb.gg/abva4t
"" Map \r to the Reformat Code action
"map \r <Action>(ReformatCode)

"" Map <leader>d to start debug
"map <leader>d <Action>(Debug)

map <C-j> <Action>(MethodDown)
map <C-k> <Action>(MethodUp)

map gD <Action>(GotoTypeDeclaration)
map gd <Action>(GotoDeclaration)
map gi <Action>(GotoImplementation)
map gr <Action>(GotoRelatedSymbol)

map gR <Action>(CMake.ClearCacheAndReload)

map gk <Action>(CheckinProject)
map gP <Action>(Vcs.Push)
map gp <Action>(Vcs.UpdateProject)

map rn <Action>(RenameElement)

nmap <C-w>= <Action>(MaximizeEditorInSplit)
nmap <C-w>- <Action>(StretchSplitToBottom)
nmap <C-w>< <Action>(StretchSplitToLeft)
nmap <C-w>> <Action>(StretchSplitToRight)
nmap <C-w>+ <Action>(StretchSplitToTop)
nmap <C-w>V <Action>(MoveEditorToOppositeTabGroup)
map vw <Action>(EditorSelectWord)

map <C-S-k> <Action>(MoveStatementUp)
map <C-S-j> <Action>(MoveStatementDown)

""map gh <Action>(QuickDocumentation)
""map gh <Action>(ShowQuickDoc)
""map gh <Action>(QuickImplementations)
map vp <Action>(QuickJavaDoc)
imap jj <Esc>


"" Map \b to toggle the breakpoint on the current line
"map \b <Action>(ToggleLineBreakpoint)

